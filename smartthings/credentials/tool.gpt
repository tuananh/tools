Name: SmartThings OAuth Credential
Share Credential: smartthings-cred as smartthings
Type: credential

---
Name: smartthings-cred
Tools: ../../oauth2

#!sys.call ../../oauth2

{
    "oauthInfo": {
        "integration": "smartthings",
        "token": "SMARTTHINGS_TOKEN",
        "scope": [
            "r:devices:$",
            "r:devices:*",
            "r:hubs:*",
            "r:installedapps",
            "r:locations:*",
            "r:rules:*",
            "r:scenes:*",
            "w:devices:$",
            "w:devices:*",
            "w:installedapps",
            "w:locations:*",
            "w:rules:*",
            "x:devices:$",
            "x:devices:*",
            "x:locations:*",
            "x:scenes:*"
        ]
    }
}
